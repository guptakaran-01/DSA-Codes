class Solution {
    public int maxLevelSum(TreeNode root) {
        ArrayDeque<TreeNode> q= new ArrayDeque<>();
        int maxlevel=1;
        int maxsum=root.val;
        int level=1;
        q.add(root);
        while(!q.isEmpty()){
            int size=q.size();
            int sum=0;
            for(int i=0; i<size ; i++){
                TreeNode temp=q.peek();
                q.remove();
                sum+=temp.val;
                if(temp.left!=null)q.add(temp.left);
                if(temp.right!=null)q.add(temp.right);

            }
           if(sum>maxsum){
            maxsum=sum;
            maxlevel=level;
           }
           level++;
        }

        return maxlevel;
    }
}